<Window x:Class="Bread.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bread"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Черный хлеб"/>
        <TextBox Name="costTextBox" Width="400" Height="30" Margin="0,0,0,8"/>
        <Label Content="Белый хлеб"/>
        <TextBox Name="secondTextBox" Width="400" Height="30" Margin="0,0,0,8"/>
        <Label Content="Батон"/>
        <TextBox Name="thirdTextBox" Width="400" Height="30" Margin="0,0,0,8"/>
        <Button Name="ravnoButton" Content="Рассчет" Width="150" Height="30" Click="ravnoButton_Click"/>
    </StackPanel>
</Window>
